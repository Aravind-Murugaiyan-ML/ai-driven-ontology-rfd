    Department_Goal ||--o{ Goal_KPI : "tracked_by"
    Department_Goal ||--o{ Initiative : "achieved_through"
    
    KPI ||--o{ Goal_KPI : "used_in"
    KPI ||--o{ Metric_Data : "generates"
    
