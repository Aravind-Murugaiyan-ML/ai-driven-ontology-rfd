classDiagram
    class Organization {
        +string name
    }
    class Department {
        +string name
    }
    class Goal {
        +string description
    }
    class KPI {
        +string metric
    }
    class Budget {
        +float amount
    }
    class ImplementationPlan {
        +string planDetails
    }

    Organization --> Department : hasDepartment
    Department --> Goal : hasGoal
    Goal --> KPI : trackedBy
    Goal --> Budget : hasBudget
    Goal --> ImplementationPlan : implementedBy