@prefix : <http://example.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

#####################
# Classes
#####################

:Organization a owl:Class .
:Department a owl:Class .
:Goal a owl:Class .
:KPI a owl:Class .
:Budget a owl:Class .
:ImplementationPlan a owl:Class .

#####################
# Object Properties (relationships between classes)
#####################

:hasDepartment a owl:ObjectProperty ;
    rdfs:domain :Organization ;
    rdfs:range :Department .

:hasGoal a owl:ObjectProperty ;
    rdfs:domain :Department ;
    rdfs:range :Goal .

:trackedBy a owl:ObjectProperty ;
    rdfs:domain :Goal ;
    rdfs:range :KPI .

:hasBudget a owl:ObjectProperty ;
    rdfs:domain :Goal ;
    rdfs:range :Budget .

:implementedBy a owl:ObjectProperty ;
    rdfs:domain :Goal ;
    rdfs:range :ImplementationPlan .

#####################
# Data Properties (attributes)
#####################

:name a owl:DatatypeProperty ;
    rdfs:domain :Organization , :Department ;
    rdfs:range xsd:string .

:description a owl:DatatypeProperty ;
    rdfs:domain :Goal ;
    rdfs:range xsd:string .

:metric a owl:DatatypeProperty ;
    rdfs:domain :KPI ;
    rdfs:range xsd:string .

:amount a owl:DatatypeProperty ;
    rdfs:domain :Budget ;
    rdfs:range xsd:float .

:planDetails a owl:DatatypeProperty ;
    rdfs:domain :ImplementationPlan ;
    rdfs:range xsd:string .
